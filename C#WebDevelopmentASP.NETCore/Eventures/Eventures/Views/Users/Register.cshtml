@model Eventures.ViewModels.Users.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="container mt-3">
    <h2 class="text-center">Register</h2>
    @{var errors = ViewData.ModelState.Where(n => n.Value.Errors.Count > 0).ToList();}
    @if (errors.Any())
    {
        foreach (var error in errors)
        {
            foreach (var valueError in error.Value.Errors)
            {
                <div class="alert alert-danger half-width text-center mx-auto alert-dismissible fade show" role="alert">
                    <hr class="hr-2 bg-info" />
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <strong>Something went wrong!</strong> @valueError.ErrorMessage
                </div>
            }
        }
    }
    <hr class="hr-2 half-width bg-info" />
    <form class=" mx-auto half-width font-weight-bold text-center" method="post">
        <div class="row">
            <div class="form-group font-weight-bold col-md-6">
                <label asp-for="Username" class="col-form-label"></label>
                <input asp-for="Username" class="form-control" placeholder="Username..." />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group font-weight-bold col-md-6">
                <label asp-for="Email" class="col-form-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Email..." />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group font-weight-bold col-md-6">
                <label asp-for="Password" class="col-form-label"></label>
                <input asp-for="Password" class="form-control" placeholder="Password..." />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group font-weight-bold col-md-6">
                <label asp-for="ConfirmPassword" class="col-form-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password..." />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <hr class="hr-1 bg-info" />
        <div class="row">
            <div class="form-group font-weight-bold col-md-6">
                <label asp-for="FirstName" class="col-form-label"></label>
                <input asp-for="FirstName" class="form-control" placeholder="FirstName..." />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group font-weight-bold col-md-6">
                <label asp-for="LastName" class="col-form-label"></label>
                <input asp-for="LastName" class="form-control" placeholder="LastName..." />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group font-weight-bold">
            <label asp-for="UniqueCitizenNumber" class="col-form-label"></label>
            <input asp-for="UniqueCitizenNumber" class="form-control" placeholder="Unique Citizen Number..." />
            <span asp-validation-for="UniqueCitizenNumber" class="text-danger"></span>
        </div>
        <hr class="hr-2 bg-info" />
        <div class="form-group">
            <button type="submit" class="btn bg-info">Register</button>
        </div>
    </form>
</div>